        <script src="~/FrontEnd/js/components/datepicker.js"></script>
        <script src="~/FrontEnd/js/components/timepicker.js"></script>
        <!-- Footer Scripts
        ============================================= -->
        <script src="~/FrontEnd/js/functions.js"></script>
        <script>
            $(document).ready(function () {
                $("#submit").click(function () {
                    $("#actualContent").hide();
                    $("#sucessMessage").show();

                });

            });
        </script>
