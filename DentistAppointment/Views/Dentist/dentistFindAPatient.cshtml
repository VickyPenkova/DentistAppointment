@model DentistAppointment.Models.DentistViewModels.DentistFindAPatientViewModel
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
    <head>

        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="author" content="" />

        <!-- Stylesheets
============================================= -->
        <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Raleway:300,400,500,600,700|Crete+Round:400i" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/FrontEnd/css/bootstrap.css" type="text/css" />
        <link rel="stylesheet" href="/FrontEnd/dentistStyle.css" type="text/css" />
        <link rel="stylesheet" href="/FrontEnd/css/font-icons.css" type="text/css" />
        <link rel="stylesheet" href="/FrontEnd/css/animate.css" type="text/css" />

        <!-- Select-Boxes CSS -->
        <link rel="stylesheet" href="/FrontEnd/css/components/select-boxes.css" type="text/css" />


        <link rel="stylesheet" href="/FrontEnd/css/responsive.css" type="text/css" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- Document Title
============================================= -->
        <title>Find a patient</title>

        <!-- Favicon
============================================= -->

        <link rel="apple-touch-icon" sizes="57x57" href="/FrontEnd/images/favicon/apple-icon-57x57.png">
        <link rel="apple-touch-icon" sizes="60x60" href="/FrontEnd/images/favicon/apple-icon-60x60.png">
        <link rel="apple-touch-icon" sizes="72x72" href="/FrontEnd/images/favicon/apple-icon-72x72.png">
        <link rel="apple-touch-icon" sizes="76x76" href="/FrontEnd/images/favicon/apple-icon-76x76.png">
        <link rel="apple-touch-icon" sizes="114x114" href="/FrontEnd/images/favicon/apple-icon-114x114.png">
        <link rel="apple-touch-icon" sizes="120x120" href="/FrontEnd/images/favicon/apple-icon-120x120.png">
        <link rel="apple-touch-icon" sizes="144x144" href="/FrontEnd/images/favicon/apple-icon-144x144.png">
        <link rel="apple-touch-icon" sizes="152x152" href="/FrontEnd/images/favicon/apple-icon-152x152.png">
        <link rel="apple-touch-icon" sizes="180x180" href="/FrontEnd/images/favicon/apple-icon-180x180.png">
        <link rel="icon" type="image/png" sizes="192x192"  href="/FrontEnd/images/favicon/android-icon-192x192.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/FrontEnd/images/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="96x96" href="/FrontEnd/images/favicon/favicon-96x96.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/FrontEnd/images/favicon/favicon-16x16.png">
        <meta name="msapplication-TileColor" content="#ffffff">
        <meta name="msapplication-TileImage" content="/FrontEnd/images/favicon/ms-icon-144x144.png">
        <meta name="theme-color" content="#ffffff">
    </head>

    <body class="stretched sticky-responsive-menu">

        <!-- Document Wrapper
============================================= -->
        <div id="wrapper" class="clearfix light-background">

            <!-- Header
============================================= -->
            <header id="header">

                <div id="header-wrap">

                    <div class="container clearfix">

                        <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                        <!-- Logo
============================================= -->
                        <div id="logo">
                            <a href="/Dentist/dentistHomePage" class="standard-logo" data-dark-logo="/FrontEnd/images/icons/molar-inside-a-shield-orange.png"><img src="/FrontEnd/images/icons/molar-inside-a-shield-orange.png" alt="Denstist Logo"></a>
                            <a href="/Dentist/dentistHomePage"  class="retina-logo" data-dark-logo="/FrontEnd/images/icons/molar-inside-a-shield-orange.png"><img src="/FrontEnd/images/icons/molar-inside-a-shield-orange.png" alt="Denstist Logo"></a>
                        </div>
                        <!-- #logo end -->

                        <!-- Primary Navigation
============================================= -->
                        <nav id="primary-menu">

                            <ul>
                                <li class="current"><a href="/Dentist/dentistHomePage"><div>My Profile</div></a>
                                </li>
                                <li class="accent-background"><a href="/Dentist/dentistFindAPatient"><div>Find a Patient</div></a>
                                </li>
                                <li class="current"><a href="/Dentist/dentistEvents">Events</a></li>
                                <li class="current"><a href="/Dentist/dentistAppointments"><div>My Appointments</div></a>
                                </li>
                                <li class="current"><a href="/Dentist/dentistMedicalManipulations"><div>Medical Manipulations History</div></a>
                                </li>
                                <li class="current">
                                    <a asp-area="Identity" asp-page="/Account/Logout"><div><i class="icon-line2-logout"></i>Log Out</div></a>
                                </li>
                            </ul>

                        </nav><!-- #primary-menu end -->

                    </div>

                </div>

            </header><!-- #header end -->

        </div><!-- #wrapper end -->

        <!-- Content
============================================= -->

        <section id="content">
            <div class="container clearfix .bg-transparent">
                <div class="content-wrap">
                    <div class="light-background p-3 m-3" style="border-radius: 10px;">
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" class="nobottommargin" method="get">
                            <div class="form-group bottommargin-sm">
                                <label for="">Enter the EGN of the patient</label>
                                <input asp-for="@Model.EGN" class="form-control" style="width:100%" type="text" />
                                <span asp-validation-for="@Model.EGN" class="text-danger"></span>
                            </div>

                            <div class="form-group bottommargin-sm">
                                <label for="">Enter the Email of the patient</label>
                                <input asp-for="@Model.Email" class="form-control" style="width:100%" type="text" />
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div class="bottommargin-sm">
                                <label for="">Enter the last name of the patient</label>
                                <input asp-for="@Model.LastName" class="form-control" style="width:100%" type="text" />
                                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" id="btnSearch" class="button button-3d button-rounded button-white accent-color"><i class="icon-search"></i>Search</button>
                            </div>
                        </form>
                    </div>

                    <div class="search-reults mt-5">

                        <!-- Comments List
============================================= -->
                        <ol class="commentlist clearfix">

                            @foreach (var patient in Model.Patients)
                            {
                            <li class="comment even thread-even depth-1">

                                <div id="comment" class="comment-wrap clearfix">

                                    <div class="comment-meta">

                                        <div class="comment-author vcard">

                                            <span class="comment-avatar clearfix">
                                                @if (@patient.Gender == "female")
                                                {
                                                     <img alt='' src='/FrontEnd/images/icons/female-user.png' class='avatar avatar-60 photo avatar-default' height='60' width='60' />
                                                }else{
                                                    <img alt='' src="/FrontEnd/images/icons/male-user.png" class='avatar avatar-60 photo' height='60' width='60' />
                                                }
                                               
                                            </span>
                                        </div>

                                    </div>

                                    <div class="comment-content clearfix">

                                        <div class="comment-author mb-4">@patient.FirstName @patient.LastName</div>
                                        <h5>EGN: <span>@patient.EGN</span></h5>
                                        <h5>Rating of patient: <span>@patient.Rating</span></h5>
                                        <h5>Email: <span>@patient.Email</span></h5>
                                        <h5>Phone number: <span>@patient.PhoneNumber</span></h5>
                                        <h5>Manipulations: </h5>
                                        <ol>
                                        @foreach(var manipulation in @patient.Reservations)
                                        {
                                            <li><h6>@manipulation.Manipulation</h6></li>

                                        }
                                        </ol> 
                                    </div>

                                    <div class="clear"></div>

                                </div>

                            </li>

                            }

                        </ol><!-- .commentlist end -->
                    </div>
                </div>
            </div>
        </section>


        <!-- Go To Top
============================================= -->
        <div id="gotoTop" class="icon-angle-up"></div>

        <!-- External JavaScripts
============================================= -->
        <script src="/FrontEnd/js/jquery.js"></script>
        <script src="/FrontEnd/js/plugins.js"></script>

        <!-- Footer Scripts
============================================= -->
        <script src="/FrontEnd/js/functions.js"></script>

        <!-- Select-Boxes Plugin -->
        <script src="/FrontEnd/js/components/select-boxes.js"></script>

        <!-- Select-Splitter Plugin -->
        <script src="/FrontEnd/js/components/selectsplitter.js"></script>
        <script>
            jQuery(document).ready( function($){

                $("#btnSearch").click(function(){
                    $(".search-reults").css("display","block");
                })


                // Multiple Select
                $(".select-1").select2({
                    placeholder: "Select Multiple Values"
                });

                // Loading array data
                var data = [{ id: 0, text: 'enhancement' }, { id: 1, text: 'bug' }, { id: 2, text: 'duplicate' }, { id: 3, text: 'invalid' }, { id: 4, text: 'wontfix' }];
                $(".select-data-array").select2({
                    data: data
                })
                $(".select-data-array-selected").select2({
                    data: data
                });

                // Enabled/Disabled
                $(".select-disabled").select2();
                $(".select-enable").on("click", function () {
                    $(".select-disabled").prop("disabled", false);
                    $(".select-disabled-multi").prop("disabled", false);
                });
                $(".select-disable").on("click", function () {
                    $(".select-disabled").prop("disabled", true);
                    $(".select-disabled-multi").prop("disabled", true);
                });

                // Without Search
                $(".select-hide").select2({
                    minimumResultsForSearch: Infinity
                });

                // select Tags
                $(".select-tags").select2({
                    tags: true
                });

                // Select Splitter
                $('.selectsplitter').selectsplitter();

            });
        </script>
        <!-- Star Rating Plugin -->
        <script src="/FrontEnd/js/components/bs-select.js"></script>

    </body>
</html>