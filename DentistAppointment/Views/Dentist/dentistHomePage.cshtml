@model DentistAppointment.Models.DentistViewModel.DentistHomePageViewModel

<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="DinBot Solutions" />

    <!-- Stylesheets
    ============================================= -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Raleway:300,400,500,600,700|Crete+Round:400i" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/dentistStyle.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/font-icons.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/animate.css" type="text/css" />

    <!-- Star Rating CSS -->
    <link rel="stylesheet" href="~/FrontEnd/css/components/bs-rating.css" type="text/css" />


    <link rel="stylesheet" href="~/FrontEnd/css/responsive.css" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Document Title
    ============================================= -->
    <title>Dentist Home Page</title>

    <!-- Favicon
    ============================================= -->

    <link rel="apple-touch-icon" sizes="57x57" href="~/FrontEnd/images/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/FrontEnd/images/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/FrontEnd/images/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/FrontEnd/images/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/FrontEnd/images/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/FrontEnd/images/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/FrontEnd/images/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/FrontEnd/images/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/FrontEnd/images/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/FrontEnd/images/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/FrontEnd/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/FrontEnd/images/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/FrontEnd/images/favicon/favicon-16x16.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/FrontEnd/images/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
</head>

<body class="stretched sticky-responsive-menu">

    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix light-background">

        <!-- Header
        ============================================= -->
        <header id="header">

            <div id="header-wrap">
               
                <div class="container clearfix">

                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                    <!-- Logo
                    ============================================= -->
                    <div id="logo">
                        <a href="/Dentist/dentistHomePage" class="standard-logo" data-dark-logo="~/FrontEnd/images/icons/molar-inside-a-shield-orange.png"><img src="~/FrontEnd/images/icons/molar-inside-a-shield-orange.png" alt="Denstist Logo"></a>
                        <a href="/Dentist/dentistHomePage" class="retina-logo" data-dark-logo="~/FrontEnd/images/icons/molar-inside-a-shield-orange.png"><img src="~/FrontEnd/images/icons/molar-inside-a-shield-orange.png" alt="Denstist Logo"></a>
                    </div>
                    <!-- #logo end -->
                    <!-- Primary Navigation
                    ============================================= -->
                    <nav id="primary-menu">

                        <ul>
                            <li class="accent-background">
                                <a href="/Dentist/dentistHomePage"><div>My Profile</div></a>
                            </li>
                            <li class="current">
                                <a href="/Dentist/dentistFindAPatient"><div>Find a Patient</div></a>
                            </li>
                            <li class="current"><a href="/Dentist/dentistEvents">Events</a></li>
                            <li class="current">
                                <a href="/Dentist/dentistAppointments"><div>My Appointments</div></a>
                            </li>
                            <li class="current">
                                <a href="/Dentist/dentistMedicalManipulations"><div>Medical Manipulations History</div></a>
                            </li>
                            <li class="current">
                                <a asp-area="Identity" asp-page="/Account/Logout"><div><i class="icon-line2-logout"></i>Log Out</div></a>
                            </li>
                        </ul>

                    </nav><!-- #primary-menu end -->

                </div>

            </div>

        </header><!-- #header end -->

    </div><!-- #wrapper end -->
    <!-- Content
    ============================================= -->
    <section id="content">

        <div class="content-wrap">

            <div class="container clearfix">

                <div id="section-couple" class="heading-block title-center page-section">
                    <h2>Doctor Profile</h2>
                </div>

                <div class="row">
                    <div class="col-12 bottommargin">
                        <div class="row team team-list clearfix">
                            <div class="team-image col-sm-12 col-md-6 col-lg-6">
                                <img class="rounded-circle center-image-user" style="width: 150px;" src="~/FrontEnd/images/icons/female-dentist.png" alt="Male User">
                            </div>
                            <div class="team-desc col-sm-12 col-md-6 col-lg-6">
                                <div class="user-names">
                                    <h4 class="pr-2" id="firstName">@Model.User.FirstName</h4>
                                    <h4 id="lastName">@Model.User.LastName</h4>
                                    <span id="gender">@Model.User.Gender</span>
                                    <h5 id="typeOfDentist">@Model.User.Dentist.Type</h5>

                                </div>

                                <div class="user-email">
                                    <h4 class="inlineBlock-elements"><i class="icon-email3"></i> Email:</h4>
                                    <span>@Model.User.Email</span>
                                </div>

                                <div class="user-egn">
                                    <h4 class="inlineBlock-elements"><i class="icon-phone3"></i> Telephone:</h4>
                                    <span>@Model.User.PhoneNumber</span>
                                </div>

                                <div class="user-address">
                                    <h4 class="inlineBlock-elements"><i class="icon-map-marker"></i> Address:</h4>
                                    <span>@Model.User.Dentist.Address</span>
                                </div>
                                <div class="user-edit">
                                    <a class="button button-3d button-black mt-5 ml-0 accent-background" href="/Dentist/dentistEditInfo"><i class="icon-edit"></i>Edit Information</a>
                                </div>

                                <div class="topmargin-sm nobottommargin"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clear"></div>
                <div class="row">
                    <div class="col-12 line"></div>
                    <div class="col-lg-12 bottommargin-sm center">
                        <div class="white-section">
                            <h2 class="accent-color">Rating of Doctor</h2>
                            <input id="input-1" value=@Model.Rating type="number" class="rating" max="5" data-step="0.1" data-size="sm" data-disabled="true" , data-readonly="true">
                        </div>
                    </div>
                    <div class="col-12 line"></div>
                </div>



                <div class="row">
                    <!-- Comments
                    ============================================= -->
                    <div id="comments" class="clearfix">
                         @*@foreach (var review in Model.Reviews)
                         {
                            <div>@review.Content</div>
                         }*@

                        <h3 id="comments-title"><span>@Model.Reviews.Count()</span> Comments</h3>

                        <!-- Comments List
    ============================================= -->
                        <ol class="commentlist clearfix">
                            @foreach (var review in Model.Reviews)
                            {
                            <li class="comment even thread-even depth-1" id="li-comment">

                                <div id="comment-1" class="comment-wrap clearfix">

                                    <div class="comment-meta">

                                        <div class="comment-author vcard">

                                            <span class="comment-avatar clearfix">
                                                <img alt='' src='~/FrontEnd/images/icons/female-user.png' class='avatar avatar-60 photo avatar-default' height='60' width='60' />
                                            </span>

                                        </div>

                                    </div>

                                    <div class="comment-content clearfix">

                                        <div class="comment-author">
                                            <a href="#">@review.User.FirstName @review.User.LastName</a>
                                            <span>DATE???</span></div>

                                        <p>@review.Content</p>
                                        <div class="col-lg-12 bottommargin-sm mt-3 ml-0">
                                            <div class="white-section">
                                                <h5 class="accent-color">Rating of Dentist</h5>
                                                <input id="input-1" value=@review.User.Rating type="number" class="rating" max="5" data-step="0.1" data-size="sm" data-disabled="true" , data-readonly="true">
                                            </div>
                                        </div>

                                    </div>

                                    <div class="clear"></div>

                                </div>

                            </li>

                            }

                            </ol><!-- .commentlist end -->

                        <div class="clear"></div>

                    </div>
                </div>
            </div>
        </div>
    </section>



    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>

    <!-- External JavaScripts
    ============================================= -->
    <script src="~/FrontEnd/js/jquery.js"></script>
    <script src="~/FrontEnd/js/plugins.js"></script>

    <!-- Footer Scripts
    ============================================= -->
    <script src="~/FrontEnd/js/functions.js"></script>

    <!-- Date & Time Picker JS -->
    <script src="~/FrontEnd/js/components/moment.js"></script>
    <script src="~/FrontEnd/js/components/datepicker.js"></script>
    <script src="~/FrontEnd/js/components/timepicker.js"></script>

    <!-- Include Date Range Picker -->
    <script src="~/FrontEnd/js/components/daterangepicker.js"></script>


</body>
</html>