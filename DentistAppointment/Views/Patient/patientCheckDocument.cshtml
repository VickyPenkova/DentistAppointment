@model DentistAppointment.Models.PatientViewModels.PatientCheckDocumentViewModel
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<link rel="stylesheet" href="~/FrontEnd/css/responsive.css" type="text/css" />
	<meta name="author" content="" />
	<!-- Document Title
	============================================= -->
	<title>Medical Manipulations</title>
	<!-- Favicon
	============================================= -->
	<link rel="apple-touch-icon" sizes="57x57" href="~/FrontEnd/images/favicon/apple-icon-57x57.png">
	<link rel="apple-touch-icon" sizes="60x60" href="~/FrontEnd/images/favicon/apple-icon-60x60.png">
	<link rel="apple-touch-icon" sizes="72x72" href="~/FrontEnd/images/favicon/apple-icon-72x72.png">
	<link rel="apple-touch-icon" sizes="76x76" href="~/FrontEnd/images/favicon/apple-icon-76x76.png">
	<link rel="apple-touch-icon" sizes="114x114" href="~/FrontEnd/images/favicon/apple-icon-114x114.png">
	<link rel="apple-touch-icon" sizes="120x120" href="~/FrontEnd/images/favicon/apple-icon-120x120.png">
	<link rel="apple-touch-icon" sizes="144x144" href="~/FrontEnd/images/favicon/apple-icon-144x144.png">
	<link rel="apple-touch-icon" sizes="152x152" href="~/FrontEnd/../images/favicon/apple-icon-152x152.png">
	<link rel="apple-touch-icon" sizes="180x180" href="~/FrontEnd/images/favicon/apple-icon-180x180.png">
	<link rel="icon" type="image/png" sizes="192x192" href="~/FrontEnd/images/favicon/android-icon-192x192.png">
	<link rel="icon" type="image/png" sizes="32x32" href="~/FrontEnd/images/favicon/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="96x96" href="~/FrontEnd/images/favicon/favicon-96x96.png">
	<link rel="icon" type="image/png" sizes="16x16" href="~/FrontEnd/images/favicon/favicon-16x16.png">
	<meta name="msapplication-TileColor" content="#ffffff">
	<meta name="msapplication-TileImage" content="~/FrontEnd/images/favicon/ms-icon-144x144.png">
	<meta name="theme-color" content="#ffffff">
</head>
<body class="stretched sticky-responsive-menu">
    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix light-background">
        <!-- Header
        ============================================= -->
        <header id="header">
            <div id="header-wrap">
                <div class="container clearfix">
                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
                    <!-- Logo
                    ============================================= -->
                    <div id="logo">
                        <a href="/Patient/patientHomePage" class="standard-logo"
                           data-dark-logo="~/FrontEnd/images/icons/molar-inside-a-shield-green.png">
                            <img src="~/FrontEnd/images/icons/molar-inside-a-shield-green.png" alt="Denstist Logo">
                        </a>
                        <a href="/Patient/patientHomePage" class="retina-logo"
                           data-dark-logo="~/FrontEnd/images/icons/molar-inside-a-shield-green.png">
                            <img src="~/FrontEnd/images/icons/molar-inside-a-shield-green.png" alt="Denstist Logo">
                        </a>
                    </div>
                    <!-- #logo end -->
                    <!-- Primary Navigation
                    ============================================= -->
                    <nav id="primary-menu">
                        <ul>
                            <li class="current">
                                <a href="/Patient/patientHomePage"><div>My Profile</div></a>
                            </li>
                            <li class="current">
                                <a href="/Patient/patientFindDoctor"><div>Find a Doctor</div></a>
                            </li>
                            <li class="current">
                                <a href="/Patient/patientAppointments"><div>My Appointments</div></a>
                            </li>
                            <li class="accent-background">
                                <a href="/Patient/patientMedicalManipulationsHistory">
                                    <div>Medical Manipulations History</div>
                                </a>
                            </li>
                            <li class="current">
                                <a asp-area="Identity" asp-page="/Account/Logout"><div><i class="icon-line2-logout"></i>Log Out</div></a>
                            </li>
                        </ul>
                    </nav><!-- #primary-menu end -->
                </div>
            </div>
        </header><!-- #header end -->
    </div><!-- #wrapper end -->
    <!-- Content
    ============================================= -->
    <section id="content">
        <div class="content-wrap">
            <div class="container clearfix">
                <div id="actualContent">
                    <div class="row">
                        <div class="col-12 bottommargin">
                            <div class="row team team-list clearfix">
                                <div class="team-image col-sm-12 col-md-6 col-lg-6">
                                    @if (@Model.Reservation.Dentist.User.Gender == "Female")
                                    {
                                        <img class="rounded-circle center-image-user" style="width: 150px;"
                                             src="~/FrontEnd/images/icons/female-dentist.png" alt="Female Dentist">
                                    }
                                    else
                                    {
                                        <img class="rounded-circle center-image-user" style="width: 150px;"
                                             src="~/FrontEnd/images/icons/male-dentist.png" alt="Male Dentist">
                                    }
                                </div>
                                <div class="team-desc col-sm-12 col-md-6 col-lg-6">
                                    <div class="user-names">
                                        <h4 class="pr-2" id="firstName">@Model.Reservation.Dentist.User.FirstName</h4>
                                        <h4 id="lastName">@Model.Reservation.Dentist.User.LastName</h4>
                                        <span id="gender">@Model.Reservation.Dentist.User.Gender</span>
                                    </div>
                                    <div class="mt-4">
                                        <h4>Date of Manipulation: <span id="manipualtionDate">@Model.Reservation.Date.ToShortDateString()</span></h4>
                                    </div>
                                    <div class="topmargin-sm nobottommargin"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="divider divider-center"><i class="icon-line-clipboard"></i></div>
                    <h4>Information about the manipulation:</h4>
                    <div class="bottommargin-sm">
                        <div id="manipulationInformation">
                            @Model.Reservation.Manipulation
                        </div>
                    </div>
                    <div class="divider divider-center"><i class="icon-line-clipboard"></i></div>
                    <h4>Rating the dentist: @Model.Review.Rating</h4>
                    <a href="/Patient/patientMedicalManipulationsHistory" id="submit"
                       class="button button-3d button-rounded accent-background">
                        <i class="icon-line-reply"></i>Back
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>
    <!-- External JavaScripts
    ============================================= -->
    <script src="~/FrontEnd/js/jquery.js"></script>
    <script src="~/FrontEnd/js/plugins.js"></script>
    <!-- Footer Scripts
    ============================================= -->
    <script src="~/FrontEnd/js/functions.js"></script>
</body>
</html>