@model DentistAppointment.Models.PatientViewModel.PatientFindDentistViewModel
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400i,700|Raleway:300,400,500,600,700|Crete+Round:400i"
          rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/style.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/font-icons.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/animate.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/components/bs-rating.css" type="text/css" />
    <link rel="stylesheet" href="~/FrontEnd/css/responsive.css" type="text/css" />
    <!-- Document Title
    ============================================= -->
    <title>Find a doctor</title>
    <!-- Favicon
    ============================================= -->
    <link rel="apple-touch-icon" sizes="57x57" href="~/FrontEnd/images/favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="~/FrontEnd/images/favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/FrontEnd/images/favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/FrontEnd/images/favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/FrontEnd/images/favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/FrontEnd/images/favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="~/FrontEnd/images/favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/FrontEnd/images/favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/FrontEnd/images/favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="~/FrontEnd/images/favicon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/FrontEnd/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/FrontEnd/images/favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/FrontEnd/images/favicon/favicon-16x16.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="~/FrontEnd/images/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
</head>
<body class="stretched sticky-responsive-menu">
    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix light-background">
        <!-- Header
        ============================================= -->
        <header id="header">
            <div id="header-wrap">
                <div class="container clearfix">
                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
                    <!-- Logo
                    ============================================= -->
                    <div id="logo">
                        <a href="/Patient/patientHomePage" class="standard-logo"
                           data-dark-logo="~/FrontEnd/images/icons/molar-inside-a-shield-green.png">
                            <img src="~/FrontEnd/images/icons/molar-inside-a-shield-green.png" alt="Denstist Logo">
                        </a>
                        <a href="/Patient/patientHomePage" class="retina-logo"
                           data-dark-logo="~/FrontEnd/images/icons/molar-inside-a-shield-green.png">
                            <img src="~/FrontEnd/images/icons/molar-inside-a-shield-green.png" alt="Denstist Logo">
                        </a>
                    </div>
                    <!-- #logo end -->
                    <!-- Primary Navigation
                    ============================================= -->
                    <nav id="primary-menu">
                        <ul>
                            <li class="current">
                                <a href="/Patient/patientHomePage"><div>My Profile</div></a>
                            </li>
                            <li class="accent-background">
                                <a href="/Patient/patientFindDoctor"><div>Find a Doctor</div></a>
                            </li>
                            <li class="current">
                                <a href="/Patient/patientAppointments"><div>My Appointments</div></a>
                            </li>
                            <li class="current">
                                <a href="/Patient/patientMedicalManipulationsHistory">
                                    <div>Medical Manipulations History</div>
                                </a>
                            </li>
                            <li class="current">
                                <a asp-area="Identity" asp-page="/Account/Logout"><div><i class="icon-line2-logout"></i>Log Out</div></a>
                            </li>
                        </ul>
                    </nav><!-- #primary-menu end -->
                </div>
            </div>
        </header><!-- #header end -->
    </div><!-- #wrapper end -->
    <!-- Content
    ============================================= -->
    <section id="content">
        <div class="container clearfix .bg-transparent">
            <div class="content-wrap">
                <div class="light-background p-3 m-3" style="border-radius: 10px;">
                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" class="nobottommargin" method="get">
                        <div class="bottommargin-sm">
                            <label>Please select a city</label>
                            @Html.DropDownListFor(model => model.City, Model.NameOfCity, new { @class= "select-1 col-12 ",
                                           style = "height: calc(2.25rem + 2px); border - radius: 3px; margin - bottom:10px; ", @title= "Please choose"})

                        </div>
                        <div class="bottommargin-sm">
                            <label for="">Choose the type of doctor</label>
                            @Html.DropDownListFor(model => model.Type, Model.DentistTypes, new{ @class = "select-1 col-12 ",
                           style = "height: calc(2.25rem + 2px); border - radius: 3px; margin - bottom:10px; ", @title = "Please choose"})
                        </div>
                        <div class="bottommargin-sm">
                            <label for="">Enter the name of the doctor</label>
                            <input asp-for="@Model.LastName" style="width:100%" type="text" />
                        </div>
                        <div class="bottommargin-sm">
                            <label for="">Select preferred rating of dentist</label>
                            @Html.DropDownListFor(model => model.Rating, Model.NumberOfStars, new { @class= "select-1 col-12 ",
                                           style = "height: calc(2.25rem + 2px); border - radius: 3px; margin - bottom:10px; ", @title= "Please choose"})
                        </div>
                        <div class="form-group">
                            <button type="submit" id="btnSearch" class="button button-3d button-rounded button-white accent-color"><i class="icon-search"></i>Search</button>
                        </div>
                    </form>
                </div>
                <div class="search-reults mt-5" >
                    <!-- Comments List
                    ============================================= -->
                    <ol class="commentlist clearfix">
                        @foreach (var dentist in Model.Dentists)
                        {

                            <li class="comment even thread-even depth-1" id="li-comment-1">
                                <div id="comment-1" class="comment-wrap clearfix">
                                    <div class="comment-meta">
                                        <div class="comment-author vcard">
                                            <span class="comment-avatar clearfix">
                                                @if (@dentist.User.Gender == "Female")
                                                {
                                                    <img alt='' src='~/FrontEnd/images/icons/female-dentist.png'
                                                         class='avatar avatar-60 photo avatar-default' height='60' width='60' />

                                                }
                                                else
                                                {
                                                    <img alt='' src='~/FrontEnd/images/icons/male-dentist.png'
                                                         class='avatar avatar-60 photo avatar-default' height='60' width='60' />
                                                }
                                            </span>
                                        </div>
                                    </div>
                                    <div class="comment-content clearfix">
                                        <div class="comment-author mb-4"><a href="#">@dentist.User.FirstName @dentist.User.LastName</a></div>
                                        <h5>Type of doctor:<span>@dentist.User.Dentist.Type</span></h5>
                                        <h5>City: <span>@dentist.User.Dentist.City</span></h5>
                                        <h5>Rating of doctor: <span>@dentist.User.Rating</span></h5>
                                        <a href="/Patient/patientDentistHomePage/@dentist.Id" id="btnSearch"
                                           class="button button-3d button-rounded accent-background"><i class="icon-forward"></i>More Information</a>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </li>
                        }
                            

                        </ol><!-- .commentlist end -->

                </div>
            </div>
        </div>
    </section>

    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>
    <!-- External JavaScripts
    ============================================= -->
    <script src="~/FrontEnd/js/jquery.js"></script>
    <script src="~/FrontEnd/js/plugins.js"></script>
    <!-- Footer Scripts
    ============================================= -->
    <script src="~/FrontEnd/js/functions.js"></script>
    <!-- Select-Boxes Plugin -->
    <script src="~/FrontEnd/js/components/select-boxes.js"></script>
    <!-- Select-Splitter Plugin -->
    <script src="~/FrontEnd/js/components/selectsplitter.js"></script>
    <script>
        jQuery(document).ready(function ($) {

            $("#btnSearch").click(function () {
                $(".search-reults").css("display", "block");
            })


            // Multiple Select
            $(".select-1").select2({
                placeholder: "Select Multiple Values"
            });

            // Loading array data
            var data = [{ id: 0, text: 'enhancement' }, { id: 1, text: 'bug' }, { id: 2, text: 'duplicate' }, { id: 3, text: 'invalid' }, { id: 4, text: 'wontfix' }];
            $(".select-data-array").select2({
                data: data
            })
            $(".select-data-array-selected").select2({
                data: data
            });

            // Enabled/Disabled
            $(".select-disabled").select2();
            $(".select-enable").on("click", function () {
                $(".select-disabled").prop("disabled", false);
                $(".select-disabled-multi").prop("disabled", false);
            });
            $(".select-disable").on("click", function () {
                $(".select-disabled").prop("disabled", true);
                $(".select-disabled-multi").prop("disabled", true);
            });

            // Without Search
            $(".select-hide").select2({
                minimumResultsForSearch: Infinity
            });

            // select Tags
            $(".select-tags").select2({
                tags: true
            });

            // Select Splitter
            $('.selectsplitter').selectsplitter();

        });
    </script>
    <!-- Star Rating Plugin -->
    <script src="~/FrontEnd/js/components/bs-select.js"></script>
</body>
</html>