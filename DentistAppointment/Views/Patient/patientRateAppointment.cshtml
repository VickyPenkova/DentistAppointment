    <script src="~/FrontEnd/js/plugins.js"></script>
    <!-- Footer Scripts
    ============================================= -->
    <script src="~/FrontEnd/js/functions.js"></script>
    <script>
        $(document).ready(function () {
            var totalGrade = 0;
            var prevPunc = 0;
            var prevExam = 0;

            $('#punctuality').on('change', function () {
                var value = parseInt($(this).val(), 10);
                totalGrade -= prevPunc;
                totalGrade += value;
                prevPunc = value;
                console.log(totalGrade);
                $('#finalGrade').text("");
                $('#finalGrade').text(totalGrade);

            });

            $('#examination').on('change', function () {
                var value = parseInt($(this).val());
                totalGrade -= prevExam;
                totalGrade += value;
                prevExam = value;
                $('#finalGrade').text("");
                $('#finalGrade').text(totalGrade);
            });

            $("#submit").click(function () {
                $("#actualContent").hide();
                $("#sucessMessage").show();

            });

        });
    </script>

