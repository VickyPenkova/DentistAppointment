    <!-- Content
    ============================================= -->
    <section id="content">
        <div class="content-wrap">
            <div class="container clearfix">
                <div id="actualContent">
                    <div class="row">
                        <div class="col-12 bottommargin">
                            <div class="row team team-list clearfix">
                                <div class="team-image col-sm-12 col-md-6 col-lg-6">
                                    <img class="rounded-circle center-image-user" style="width: 150px;" 
										 src="~/FrontEnd/images/icons/female-dentist.png" alt="Male User">
                                </div>
                                <div class="team-desc col-sm-12 col-md-6 col-lg-6">
                                    <div class="user-names">
                                        <h4 class="pr-2" id="firstName">FirstNameDoctor</h4>
                                        <h4 id="lastName">LastNameDoctor</h4>
                                        <span id="gender">Female</span>
                                        <h5 id="typeOfDentist">Ortodonth</h5>
                                    </div>
                                    <div class="topmargin-sm nobottommargin"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="divider divider-center"><i class="icon-pencil"></i></div>
                    <h4>Please rate your medical manipulation:</h4>
                    <form action="#" method="post" class="nobottommargin">
                        <div class="bottommargin-sm">
                            <label for="">Please select how satisfied you were with the punctuality of your doctor</label>
                            <select id="punctuality" class="select-1 form-control" style="width:100%;">
                                <option value="1">Very dissatisfied</option>
                                <option value="2">Dissatisfied</option>
                                <option value="3">Okay</option>
                                <option value="4">Satisfied</option>
                                <option value="5">Very Satisfied</option>
                            </select>
                        </div>
                        <div class="bottommargin-sm">
                            <label for="">Please select how satisfied you were with the examination process</label>
                            <select id="examination" class="select-1 form-control" style="width:100%;">
                                <option value="1">Very dissatisfied</option>
                                <option value="2">Dissatisfied</option>
                                <option value="3">Okay</option>
                                <option value="4">Satisfied</option>
                                <option value="5">Very Satisfied</option>
                            </select>
                        </div>
                        <div class="bottommargin-sm">
                            <label for="">Additional Comment</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </form>
                    <h4>Final grade: <span id="finalGrade"></span></h4>
                    <a href="#" id="submit" class="button button-3d button-rounded accent-background">
                        <i class="icon-ok"></i>Submit
                    </a>
                </div>


                <div id="sucessMessage">
                    <h3 class="alert alert-success">Your report has been submittet succesfully!</h3>
                    <a href="/Patient/patientHomePage" class="button button-3d button-rounded accent-background">
                        <i class="icon-line-rewind"></i>Back to your home page
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Go To Top
